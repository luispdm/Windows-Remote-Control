<Window x:Class="ServerSide.WindowRedBorder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WindowRedBorder" Height="300" Width="300" AllowsTransparency="True" WindowStyle="None" WindowState="Maximized" Topmost="True">

    <Window.Background>
        <SolidColorBrush Opacity="0" Color="White"/>
    </Window.Background>

    <Border
        BorderThickness="4"
        BorderBrush="Red"
        CornerRadius="1"
        Height="{DynamicResource {x:Static SystemParameters.PrimaryScreenHeightKey}}"
        Width="{DynamicResource {x:Static SystemParameters.PrimaryScreenWidthKey}}"/>
</Window>
